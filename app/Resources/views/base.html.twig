<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/front/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/front/css/main.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
{% include 'FrontBundle:Includes:header.html.twig' %}

<div class="container content-site">
    <div class="row">
        {% block body %}

        {% endblock %}
    </div>
</div>
{% include 'FrontBundle:Includes:footer.html.twig' %}

{% block javascripts %}
    <script src="{{ asset('bundles/front/js/jquery.js') }}"></script>
    <script src="{{ asset('bundles/front/js/bootstrap.js') }}"></script>
    <script src="{{ asset('bundles/front/js/main.js') }}"></script>
{% endblock %}
</body>
</html>
